{
    "name": "amx/salesforce",
    "description": "A salesforce integration package for Php applications.",
    "type": "library",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "omniphx/forrest": "2.*",
        "symfony/console": "^7.3",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/events": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Amx\\Salesforce\\": "src/"
        }
    },
    "bin": [
      "bin/salesforce"
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Amx\\Salesforce\\Providers\\SalesforceServiceProvider"
            ]
        }
    },
    "archive": {
        "exclude": [
            "/.gitignore",
            "/.vscode",
            "/.idea",
            "/tests",
            "/.gitattributes",
            "composer.json",
            "composer.lock",
            "README.md",
            "eslint.config.js",
            ".prettierignore",
            ".prettierrc"
        ]
    }
}
